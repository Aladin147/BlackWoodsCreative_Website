{
  "name": "blackwoods-creative-website",
  "version": "1.1.0",
  "description": "Premium portfolio website for BlackWoods Creative - showcasing filmmaking, photography, 3D, and scene creation",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:strict": "npx eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "npx eslint src --ext .ts,.tsx --fix",
    "lint:check": "npx eslint src --ext .ts,.tsx --max-warnings 50",
    "lint:report": "npx eslint src --ext .ts,.tsx --format html --output-file eslint-report.html",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:staged": "prettier --write --cache --ignore-unknown",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "code-quality": "npm run type-check && npm run lint:check && npm run format:check",
    "code-quality:fix": "npm run type-check && npm run lint:fix && npm run format",
    "pre-commit": "npm run code-quality:fix && npm run test:unit",
    "validate": "npm run build && npm run test && npm run code-quality",
    "analyze": "cross-env ANALYZE=true next build",
    "analyze:report": "node scripts/bundle-analysis.js",
    "analyze:full": "npm run analyze && npm run analyze:report",
    "bundle:check": "npm run build && npm run analyze:report",
    "bundle:optimize": "npm run analyze:full && echo 'Check .next/analyze/bundle-report.json for optimization recommendations'",
    "performance:check": "node scripts/performance-check.js",
    "images:optimize": "node scripts/optimize-images.js",
    "seo:validate": "node scripts/validate-seo.js",
    "seo:verify": "node scripts/verify-seo-components.js",
    "security:validate": "node scripts/validate-security-accessibility.js",
    "performance:optimize": "npm run performance:check && npm run bundle:optimize",
    "test": "cross-env NODE_OPTIONS=\"--no-deprecation\" jest",
    "test:watch": "cross-env NODE_OPTIONS=\"--no-deprecation\" jest --watch",
    "e2e": "playwright test",
    "collect-hashes": "node scripts/collect-hashes.js",
    "collect-hashes:dev": "npm run dev & sleep 10 && npm run collect-hashes && kill %1",
    "production:validate": "node scripts/production-validation.js",
    "production:deploy": "npm run production:validate && npm run build"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@upstash/ratelimit": "^2.0.5",
    "@upstash/redis": "^1.35.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.0",
    "next": "^15.3.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "resend": "^4.6.0",
    "sharp": "^0.34.2",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.30.1",
    "@next/bundle-analyzer": "^15.3.5",
    "@playwright/test": "^1.52.0",
    "@svgr/webpack": "^8.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.10.3",
    "cross-env": "^7.0.0",
    "eslint": "^9.30.1",
    "eslint-config-next": "^15.3.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^1.0.4",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "madge": "^8.0.0",
    "playwright": "^1.40.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "portfolio",
    "creative-agency",
    "filmmaking",
    "photography",
    "3d-visualization",
    "next.js",
    "typescript",
    "framer-motion"
  ],
  "author": "BlackWoods Creative",
  "license": "UNLICENSED"
}
